@{
    <!-- Slider-Start -------------->

    <section id="feature_news_section" class="feature_news_section">
        <div class="container">
            <div class="row">
                <div class="anasayfa-slider" id="slider">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                            <li data-target="#myCarousel" data-slide-to="4"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="anasayfa-slider-resimler" src="img/slider-foto-1.jpg" alt="birinci slayt resmi">
                                <div class="carousel-caption"></div>
                            </div>
                            <div class="item">
                                <img class="anasayfa-slider-resimler" src="img/slider-foto-2.jpg" alt="ikinci slayt resmi">
                                <div class="carousel-caption"></div>
                            </div>
                            <div class="item">
                                <img class="anasayfa-slider-resimler" src="img/slider-foto-3.jpg" alt="üçüncü slayt resmi">
                                <div class="carousel-caption"></div>
                            </div>
                            <div class="item">
                                <img class="anasayfa-slider-resimler" src="img/slider-foto-4.jpg" alt="Dördüncü slayt resmi">
                                <div class="carousel-caption"></div>
                            </div>
                            <div class="item">
                                <img class="anasayfa-slider-resimler" src="img/slider-foto-5.jpg" alt="beşinci slayt resmi">
                                <div class="carousel-caption"></div>
                            </div>

                        </div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Row -->

        </div>
        <!-- container -->

    </section>
}
