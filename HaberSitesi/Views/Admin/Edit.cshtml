@model HaberSitesi.Models.Haber

@{
    Layout = null;
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/bootstrap.5.0.2.min.css" />
<link rel="stylesheet" href="~/css/adminPanel.css" />


<div class="container mg-100">
    <div class="row">
        <div class="card">
            <div class="col-md-12">
                <div class="ortala">
                    <h3 class="baslik mt-30">HABER GÜNCELLE</h3>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group pb-30">
                            <input asp-for="HaberId" class="form-control" type="hidden" />
                            <span asp-validation-for="HaberId" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-30">
                            <label asp-for="HaberBaslik" class="control-label"></label>
                            <input asp-for="HaberBaslik" class="form-control" />
                            <span asp-validation-for="HaberBaslik" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-30">
                            <label asp-for="HaberIcerik" class="control-label"></label>
                            <input asp-for="HaberIcerik" class="form-control" />
                            <span asp-validation-for="HaberIcerik" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-30">
                            <label asp-for="HaberGorsel" class="control-label"></label>
                            <input asp-for="HaberGorsel" class="form-control" />
                            <span asp-validation-for="HaberGorsel" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-30">
                            <label asp-for="dateTime" class="control-label"></label>
                            <input asp-for="dateTime" class="form-control" />
                            <span asp-validation-for="dateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
