@model IEnumerable<HaberSitesi.Models.Haber>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FDK Haber Admin Panel</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="adminlte.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">


    <style>
        #stok-ekle-buton {
            border: none;
            margin-bottom: 20px;
            width: 130px;
            height: 35px;
            background-color: #343a40;
            float: right;
        }

        #stok-ekle-buton a {
            color: #fff;
        }

        .form-genel {
            width: 300px;
            margin: 0 auto;
        }

        .form-genel-baslik {
            text-align: center;
        }

        .form-genel-input {
            width: 100%;
            margin-bottom: 10px;
        }

        .ortala {
            text-align: center;
        }

        .small-box h3 {
            font-size: 1.50rem !important;
        }
        .panel-anasayfa-linkler a
        {
            border:1px solid;
            border-radius:4px;
            border-color:#000;
            background-color: lightskyblue;
            color:#000 !important;
            margin-left:5px;
            margin-right:5px;
            height:35px;
            padding:5px;
            min-width:50px;
            display:inline-block;
        }
        .create-new-buton a
        {
            border:none;
            border-radius: 4px;
            border-color: #000;
            background-color: #5124D5;
            color: #fff !important;
            margin-left: 5px;
            margin-right: 5px;
            height: 35px;
            padding: 5px;
            width: 125px;
            display: inline-block;
            text-align:center;
        }
        .create-new-buton a:hover
        {
            transition: 0.3s ease-in-out;
            background-color:#A184F7;
        }
    </style>
    <base href="~/" />
</head>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">

                </li>
                <li class="nav-item d-none d-sm-inline-block">

                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" href="Admin/Cikis">
                        <i class="fas fa-sign-out"></i>
                    </a>
                </li>

                <!-- Notifications Dropdown Menu -->
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="javascript:void(0);" class="brand-link">
                <img src="img/adminlogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">FDK Panel</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    HABERLER
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-4 mt-5">
              
                    </div>
                    <div class="col-12 col-sm-12 col-md-4 mt-5">
             
                    </div>
                    <div class="col-12 col-sm-12 col-md-4 mt-5">
       
                    </div>
                </div>
            </div>

            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-8" style="margin:0 auto;">



                            <h3 style="text-align:center; margin-top:40px; margin-bottom:40px; padding-bottom:10px; border-bottom:solid 2px;">HABERLER</h3>
                            <table class="table table-bordered table" style="text-align:center;">
                                <p class="create-new-buton">
                                    <a asp-action="Create">Haber Ekle</a>
                                </p>
                                <thead>
                                    <tr>
                                        <th scope="col">HABER ID</th>
                                        <th scope="col">HABER BAŞLIK</th>
                                        <th scope="col">HABER İÇERİK</th>
                                        <th scope="col">HABER TARİH</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                                <td class="col-md-2">@item.HaberId</td>
                                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.HaberBaslik)</td>
                                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.HaberIcerik)</td>
                                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.dateTime)</td>
                                        <td class="panel-anasayfa-linkler">
                                                @Html.ActionLink("Düzenle", "Edit", new {  id=item.HaberId }) |
                                                @Html.ActionLink("Detaylar", "Details", new { id=item.HaberId }) |
                                                @Html.ActionLink("Sil", "Delete", new {  id=item.HaberId  })
                                        </td>
                                        </tr>
                                       
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </section>


        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2023-2023.</strong> FDK Haber hakları saklıdır.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <script src="_framework/blazor.server.js"></script>
    <!-- jQuery -->
    <script src="js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="js/demo.js"></script>
</body>

</html>


